  // styl property ordering: https://github.com/rossPatton/stylint/blob/master/src/data/ordering.json

@import 'kouto-swiss'
@import 'helpers'

@import 'fonts/graphik'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// BOWER LIBRARY

@import 'library'

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)

$color-red = rgb(239, 63, 66)
$color-blue = rgb(22, 72, 152)
$color-yellow = rgb(229 220, 26)

$color-facebook = rgb(59, 89, 152)
$color-twitter = rgb(0, 132, 180)

// ******************************************************

// BASIC

html
  font-family: 'Graphik'
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: auto

img
  max-width: 100%
  height: auto

a > img
  vertical-align: top

// HEADERS
h1, h2, h3, h4, h5, h6
  font-weight: bold
  font-style: italic

h1, h2
  letter-spacing: 1px

// CUSTOM HELPER CLASSES

.helvetica
  font-family: 'Helvetica'

.mobile-only
  display: initial !important

.desktop-only,
.medium-only
  display: none !important

// ******************************************************

// MEDIA QUERIES

$gutter = 18px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 22px
$font-size-h1 = 38px //28
$font-size-h2 = 34px
$font-size-h3 = 28px

grid(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, $font-size-h1, $font-size-h2, $font-size-h3)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 21px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 14px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid(680px, $gutter, m)

  font-size($font-size-basic)

  .mobile-only
    display: none !important

  .medium-only
    display: initial !important

  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 36px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 16px

  grid(1000px, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  font-size($font-size-basic)

  .desktop-only
    display: initial !important

  @import 'responsive/desktop'

@media screen and (min-width: 1280px)

  grid(1200px)
